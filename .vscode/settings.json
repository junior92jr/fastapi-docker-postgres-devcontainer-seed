{
  "terminal.integrated.defaultProfile.linux": "zsh", // Uses Zsh as the default terminal
  "sqltools.connections": [ // Database connection for SQLTools extension
    {
      "name": "Container database",
      "driver": "PostgreSQL",
      "previewLimit": 50,
      "server": "db",
      "port": 5432,
      "database": "web",
      "username": "postgres",
      "password": "postgres"
    }
  ],
  "python.defaultInterpreterPath": "/usr/local/bin/python", // Python interpreter path
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter" // Uses Black for formatting
  },
  "editor.insertSpaces": true, // Converts tabs to spaces
  "editor.tabSize": 4, // Sets indentation to 4 spaces
  "python.languageServer": "Pylance", // Enables Pylance for IntelliSense
  "python.testing.pytestEnabled": true, // Enables Pytest for testing
  "editor.formatOnSave": true, // Auto-formats files on save
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always" // Automatically sorts imports
  },
  "editor.rulers": [
    88
  ], // Displays a vertical ruler at 88 characters
  "python.analysis.autoImportCompletions": true, // Enables auto-import suggestions
  "python.analysis.typeCheckingMode": "basic", // Enables basic type checking
  "python.analysis.diagnosticMode": "workspace", // Analyzes the entire workspace
  "python.autoComplete.extraPaths": [
    "./workspace"
  ] // Adds extra paths for autocompletion
}