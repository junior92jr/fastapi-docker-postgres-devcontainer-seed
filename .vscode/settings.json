{
  "python.formatting.provider": "black",
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 4,
  "python.languageServer": "Pylance",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true, // Enable Flake8 linting
  "python.linting.flake8Args": [ // Custom arguments for Flake8 (optional)
    "--max-line-length=88" // Adjust to your preferred line length
  ],
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.nosetestsEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.analysis.autoImportCompletions": true, // Enable auto-import completions
  "python.analysis.typeCheckingMode": "basic", // Set type checking mode
  "python.analysis.diagnosticMode": "workspace", // Set diagnostics mode to workspace
  "python.autoComplete.extraPaths": [
    "./workspace" // Add your source paths for better IntelliSense (optional)
  ]
}